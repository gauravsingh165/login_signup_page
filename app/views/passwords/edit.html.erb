<h1>Edit paasword</h1>
<%=form_with model: Current.user, url: edit_password_path do |form|%>
  <% if form.object.errors.any? %>
    <div class="alert alert-danger">
      <% form.object.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  <% end %>
 <div  class ="mb-3" style="background-color:#FF9933">
   <%= form.label :password %><br>
    <%= form.password_field :password, class: "form-control",placeholder:"password" %>
 </div>
 <div  class ="mb-3" style="background-color:green">
   <%= form.label :password_confirmation %><br>
    <%= form.password_field :password_confirmation , class: "form-control",placeholder:"password"%>
 </div>
 <div  class ="mb-3">
 <%= form.submit "Update password",class: "btn btn-primary", "data-turbo"=>"false"%>
 </div>

<% end %>